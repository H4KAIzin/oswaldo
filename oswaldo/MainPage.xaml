<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="oswaldo.MainPage">

    <Grid>
        
        <!-- Definindo linhas -->
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
       
       <!-- imagem de fundo -->
        
        <Image Source="branco.jpg"
            Grid.RowSpan="3"
            Aspect="AspectFill"/> 

        <Grid>
        <Label="Jogo dos Bixo"
            Grid.Row="1"/>
        </Grid>
       
        <!-- Botao iniciar -->
       
       <ImageButton Source="start.jpg.png"
            Clicked="buttonStarted"
            Grid.Row="2"
            BorderWidth="3"
            BorderColor="White"/>

        <!-- Botao sobre -->

        <ImageButton Source="abrir-menu.png"
            Clicked="buttonInf"
            Grid.Row="2"
            BorderWidth="3"
            BorderColor="White"/>

        

    </Grid>
</ContentPage>
